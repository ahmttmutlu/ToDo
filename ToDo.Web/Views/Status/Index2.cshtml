@model List<Status>
<div class="card">
    <div class="card-header bg-gradient bg-primary text-white text-center">
        Status Listesi
    </div>
    <div class="card-body">
        <a asp-action="Add" asp-controller="Status" class="btn btn-success">EKLE</a>
        
        <table id="tblStatus" class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Status Adı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td><a asp-action="DeleteStatus2" asp-controller="Status" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                            <a asp-action="Update2" asp-controller="Status" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>


</div>



